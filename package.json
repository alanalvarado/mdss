{
  "name": "mdss",
  "version": "3.0.0",
  "description": "Stylesheets for displaying and printing Markdown documents",
  "author": "MÃ¡rton Visnovitz <vimtaai@inf.elte.hu>",
  "license": "MIT",
  "repository": "github:vimtaai/mdss",
  "type": "module",
  "main": "dist/mdss.min.css",
  "bin": "bin/mdss.js",
  "files": [
    "/src",
    "/bin",
    "/dist"
  ],
  "scripts": {
    "build": "node bin/mdss.js build --theme-dir src/theme --output-dir dist",
    "build:dev": "node bin/mdss.js build --dev --theme-dir src/theme --output-dir dist",
    "watch": "chokidar \"**/*.scss\" -c \"npm run build:dev\"",
    "prepare": "npm run build && npm run build:dev"
  },
  "dependencies": {
    "commander": "^6.2.0",
    "csso": "^4.1.1",
    "fs-extra": "^9.0.1",
    "sass": "^1.29.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "chokidar": "^3.4.3"
  }
}
